# Database
# For local development, use SQLite
DATABASE_URL="file:./dev.db"
# For production, use PostgreSQL (e.g., from Supabase)
# DATABASE_URL="postgresql://user:password@host:5432/database?schema=public"

# Server
PORT=5000
NODE_ENV=development
CORS_ORIGIN=http://localhost:3000

# Auth / JWT
# IMPORTANT: Use a strong secret (minimum 32 characters) for production
JWT_SECRET=your_jwt_secret_key_min_32_chars_change_this_in_production
JWT_EXPIRES_IN=7d

# Supabase Configuration
# Get these from your Supabase project dashboard: https://app.supabase.com
SUPABASE_URL=https://YOUR_PROJECT_REF.supabase.co
SUPABASE_ANON_KEY=YOUR_ANON_KEY
SUPABASE_SERVICE_KEY=YOUR_SERVICE_ROLE_KEY

# Supabase Storage
# Bucket must exist in Supabase Storage (or backend will try to create it)
SUPABASE_AVATAR_BUCKET=avatars

# RapidAPI (for Udemy course integration)
# Get your API key from: https://rapidapi.com/
RAPIDAPI_KEY=your_rapidapi_key_here
RAPIDAPI_HOST=paid-udemy-course-for-free.p.rapidapi.com

# OpenRouter AI Service (for AI recommendations and chatbot)
# Get your API key from: https://openrouter.ai/
OPENROUTER_API_KEY=your_openrouter_api_key_here
OPENROUTER_MODEL=openai/gpt-4o-mini
# Optional: Customize these for OpenRouter request headers


# Google Gemini AI (optional - currently not used, but available for future integration)
# Get your API key from: https://makersuite.google.com/app/apikey
# GEMINI_API_KEY=your_gemini_api_key_here
